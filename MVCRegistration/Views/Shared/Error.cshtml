@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <title>Mvc Registration - Error</title>
</head>

<body class="not-found">
    <div class="not-found-block">
        <div class="not-found-inner">
            <img src="~/images/sad.png" alt="">
            <h1>
                Something went wrong
                <span> An error occurred while processing your request. </span>
            </h1>
            <a href="@Url.Action("Index","Users")" class="btn btn-primary">&laquo; Back</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            ShowMessage('succsess', '@TempData["SuccessMessage"]');
        </script>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <script>
            ShowMessage('warning', '@TempData["WarningMessage"]');
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            ShowMessage('danger', '@TempData["ErrorMessage"]');
        </script>
    }

</body>
</html>
